<div class="container">
<h1><%= @article.title %></h1>
<p><%= @article.content %></p>

<%= link_to "back", articles_path, class: "btn btn-primary" %>
<br>
<%= link_to "edit", edit_article_path, class: "btn btn-primary" %>
<br>
<%= link_to "Delete this article",
            article_path(@article), class: "btn btn-primary",
            method: :delete,
            data: {confirm: "Are you sure ?"} %>
</div>
